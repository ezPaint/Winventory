<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simoncomputing.app.winventory.dao.EventToLocationDao">

    <resultMap id="EventToLocationMapper" type="com.simoncomputing.app.winventory.domain.EventToLocation">
        <result column ="KEY"                 property = "key" />
        <result column ="EVENT_ID"            property = "eventId" />
        <result column ="LOCATION_ID"         property = "locationId" />
    </resultMap>

    <select id="read" parameterType="map" resultMap="EventToLocationMapper">
        select * from EVENT_TO_LOCATION
        where ${where}
    </select>

    <insert id="create" parameterType="com.simoncomputing.app.winventory.domain.EventToLocation">
        <selectKey resultType="_long" keyProperty="key" order="BEFORE">
            select EVENT_TO_LOCATION_SEQ.nextval from dual
        </selectKey>
        insert into EVENT_TO_LOCATION
        (
            KEY , EVENT_ID , LOCATION_ID
        )
        values
        (
            #{key} , #{eventId} , #{locationId}
        )
    </insert>

    <select id="getListByEventId" parameterType="long" resultMap="EventToLocationMapper">
        select * from EVENT_TO_LOCATION
        where EVENT_ID = #{eventId}
    </select>
    <select id="getListByLocationId" parameterType="long" resultMap="EventToLocationMapper">
        select * from EVENT_TO_LOCATION
        where LOCATION_ID = #{locationId}
    </select>


    <update id="update" parameterType="com.simoncomputing.app.winventory.domain.EventToLocation">
        update EVENT_TO_LOCATION set
            KEY                                 = #{key} ,
            EVENT_ID                            = #{eventId} ,
            LOCATION_ID                         = #{locationId}
        where KEY = #{key}
    </update>

    <delete id="delete" parameterType="map">
        delete from EVENT_TO_LOCATION
        where ${where}
    </delete>


    <!-- PROTECTED CODE -->

</mapper>