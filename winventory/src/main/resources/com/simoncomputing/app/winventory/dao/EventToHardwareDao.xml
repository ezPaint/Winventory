<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simoncomputing.app.winventory.dao.EventToHardwareDao">

    <resultMap id="EventToHardwareMapper" type="com.simoncomputing.app.winventory.domain.EventToHardware">
        <result column ="KEY"                 property = "key" />
        <result column ="EVENT_ID"            property = "eventId" />
        <result column ="HARDWARE_ID"         property = "hardwareId" />
    </resultMap>

    <select id="read" parameterType="map" resultMap="EventToHardwareMapper">
        select * from EVENT_TO_HARDWARE
        where ${where}
    </select>

    <insert id="create" parameterType="com.simoncomputing.app.winventory.domain.EventToHardware">
        <selectKey resultType="_long" keyProperty="key" order="BEFORE">
            select EVENT_TO_HARDWARE_SEQ.nextval from dual
        </selectKey>
        insert into EVENT_TO_HARDWARE
        (
            KEY , EVENT_ID , HARDWARE_ID
        )
        values
        (
            #{key} , #{eventId} , #{hardwareId}
        )
    </insert>

    <select id="getListByEventId" parameterType="long" resultMap="EventToHardwareMapper">
        select * from EVENT_TO_HARDWARE
        where EVENT_ID = #{eventId}
    </select>
    <select id="getListByHardwareId" parameterType="long" resultMap="EventToHardwareMapper">
        select * from EVENT_TO_HARDWARE
        where HARDWARE_ID = #{hardwareId}
    </select>


    <update id="update" parameterType="com.simoncomputing.app.winventory.domain.EventToHardware">
        update EVENT_TO_HARDWARE set
            KEY                                 = #{key} ,
            EVENT_ID                            = #{eventId} ,
            HARDWARE_ID                         = #{hardwareId}
        where KEY = #{key}
    </update>

    <delete id="delete" parameterType="map">
        delete from EVENT_TO_HARDWARE
        where ${where}
    </delete>


    <!-- PROTECTED CODE -->

</mapper>